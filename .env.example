# Application Settings
APP_NAME="Bulk SMS System"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bulksms_db
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/bulksms_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Arkesel SMS API Configuration
ARKESEL_API_KEY=ekV0ZGp1YmFIQUViQkphR3JxaWY
ARKESEL_BASE_URL=https://sms.arkesel.com/sms/api
ARKESEL_CONTACTS_URL=https://sms.arkesel.com/contacts/api
ARKESEL_DEFAULT_SENDER_ID=MyApp

# SMS Rate Limiting
SMS_RATE_LIMIT=60
SMS_BATCH_SIZE=100
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY=5

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.xlsx,.xls,.csv
UPLOAD_DIR=./uploads

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=200

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
